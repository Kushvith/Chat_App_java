<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".otpAuthenication">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="63dp"
        android:padding="20dp"
        android:text="Enter the otp which you Recieved"
        android:textAlignment="center"
        android:textColor="#6e6e6e"
        android:textSize="20sp"
        android:textStyle="bold" />
<EditText
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/textheading"
    android:layout_marginLeft="120dp"
    android:layout_marginRight="120dp"
    android:hint="Enter the otp...."
    android:textColor="@color/black"
    android:id="@+id/getotp"
    android:textAlignment="center">

</EditText>

    <TextView
        android:id="@+id/changeNumber"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/getotp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="60dp"
        android:text="Didn't Recieve? Change Number"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold">

    </TextView>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/verifyotp"
        android:layout_below="@id/changeNumber"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:paddingRight="40dp"
        android:background="#25d366"
        android:text="verify otp"></android.widget.Button>

    <ProgressBar
        android:id="@+id/progressbarofotpAuth"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyotp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />
</RelativeLayout>